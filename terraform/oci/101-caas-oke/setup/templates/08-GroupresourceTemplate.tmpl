{{ $glbCtx := . }}
apiVersion: eaas.envmgmt.io/v1
kind: ResourceTemplate
metadata:
  name: {{ $glbCtx.GroupResourceTemplate }}-{{ $glbCtx.projectName }}
  project: {{ $glbCtx.projectName }}
spec:
  agents:
  - name: {{ $glbCtx.agentName }}-{{ $glbCtx.projectName }}
  contexts:
  - name: {{ $glbCtx.RafayConfigContext }}-{{ $glbCtx.projectName }}
  provider: terraform
  providerOptions:
    terraform:
      refresh: true
      backendType: system
      version: 1.4.6
  repositoryOptions:
    branch: {{ $glbCtx.branch }}
    directoryPath: {{ $glbCtx.tfRepoPathGroup }}
    name: {{ $glbCtx.repoName }}-{{ $glbCtx.projectName }}
  variables:
  - name: project_name
    options:
      description: Rafay Project Name
      required: true
    value: $(environment.name)$
    valueType: expression
  - name: group
    options:
      description: Rafay Group Name
      required: true
    value: $(environment.id)$
    valueType: expression
  - name: user
    options:
      description: Add user to rafay group for the access
      required: true
    value: $(trigger.payload.username)$
    valueType: expression
  version: {{ $glbCtx.version }}
