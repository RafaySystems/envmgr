{{ $glbCtx := . }}
apiVersion: eaas.envmgmt.io/v1
kind: ResourceTemplate
metadata:
  name: {{ $glbCtx.ECSResourceTemplate }}-{{ $glbCtx.projectName }}
  project: {{ $glbCtx.projectName }}
spec:
  agents:
  - name: {{ $glbCtx.agentName }}
  contexts:
  - name: {{ $glbCtx.ConfigContext }}-{{ $glbCtx.projectName }}
  provider: terraform
  providerOptions:
    terraform:
      refresh: true
      backendType: system
      version: 1.4.6
  repositoryOptions:
    branch: {{ $glbCtx.branch }}
    directoryPath: {{ $glbCtx.tfRepoPathECS }}
    name: {{ $glbCtx.repoName }}-{{ $glbCtx.projectName }}
  variables:
  - name: region
    options:
      override:
        type: allowed
      required: true
    value: {{ $glbCtx.awsRegion }}
    valueType: text
  - name: vpc_id
    options:
      override:
        type: notallowed
    value: $(resource."{{ $glbCtx.VPCResourceTemplate }}-{{ $glbCtx.projectName }}".output.vpc_id.value)$
    valueType: expression
  - name: public_subnet_id
    options:
      override:
        type: notallowed
    value: $(resource."{{ $glbCtx.VPCResourceTemplate }}-{{ $glbCtx.projectName }}".output.public_subnets.value)$
    valueType: expression
  - name: name
    options:
      description: App Name
      override:
        type: notallowed
    value: $(environment.name)$
    valueType: expression
  - name: container_name
    options:
      description: Container Name
      override:
        type: notallowed
    value: $(environment.name)$
    valueType: expression
  - name: ecs_task_definition_name
    options:
      description: Task definition name
      override:
        type: notallowed
    value: $(environment.name)$
    valueType: expression
  - name: environment
    options:
      description: App Environment Name
      override:
        type: notallowed
    value: $(environment.name)$
    valueType: expression
  version: {{ $glbCtx.version }}
